{
  "name": "react-rescript-sandbox",
  "version": "0.0.1",
  "description": "React Rescript Sandbox app for learning the language",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rescript clean -with-deps",
    "format": "npm run format:js && npm run format:res",
    "format:js": "prettier --write \"**/*.{js,json,md,yml}\"",
    "format:res": "rescript format -all",
    "serve": "vite preview",
    "start": "vite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.11.0",
    "@rescript/react": "^0.10.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "axios": "^0.27.2",
    "dompurify": "^2.4.0",
    "marked": "^4.1.0",
    "node-fetch": "^3.2.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rescript-webapi": "^0.6.1"
  },
  "devDependencies": {
    "@jihchi/vite-plugin-rescript": "^4.0.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "bs-fetch": "^0.6.2",
    "prettier": "^2.7.1",
    "rescript": "^10.0.1",
    "sass": "^1.54.9",
    "vite": "^3.0.9"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "src/**/*.bs.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcarmen/react-rescript-sandbox.git"
  },
  "keywords": [
    "React",
    "Rescript",
    "Sandbox"
  ],
  "author": "Ben Carmen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bcarmen/react-rescript-sandbox/issues"
  },
  "homepage": "https://github.com/bcarmen/react-rescript-sandbox#readme"
}
